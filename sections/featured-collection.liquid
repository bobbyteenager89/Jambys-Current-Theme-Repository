{% style %}
  {% if section.settings.title_alignment == 'center' %}
  .section-id-{{ section.id }} h2 {
    text-align: center;
    width: 100%;
    padding: 0;
  }
  .section-id-{{ section.id }} .section-heading {
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }
  {% endif %}
  .featured-collection-home{
    background: none;
  }
{% endstyle %}

{% style %}
  {% unless section.settings.color_bg == blank %}
     .section-id-{{ section.id }} {
        background-color: {{ section.settings.color_bg }};
     }
  {% endunless %}
{% endstyle %}

{%- if section.settings.wave != "none" -%}
  {%- render 'wave-styles',
      wave_position: section.settings.wave,
      section_id: section.id,
      fill_color: section.settings.color_bg -%}
{%- endif -%}

{%- if section.settings.layout == 'rows' -%}
  {%- if section.settings.grid == 2 -%}
    {%- assign product_class = 'column half' -%}
    {%- elsif section.settings.grid == 3 -%}
    {%- assign product_class = 'column third' -%}
  {%- else -%}
    {%- assign product_class = 'column quarter' -%}
  {%- endif -%}
{%- endif -%}

{%- assign max_products = section.settings.grid | times: section.settings.rows -%}
{%- if section.settings.max_products > 0 -%}
  {%- assign max_products = max_products | at_most: section.settings.max_products -%}
{%- endif -%}

{% assign animation_type = "cc-fade-in-up" %}
{%- if section.settings.layout == "columns" -%}
  {% assign animation_type = "cc-fade-in" %}
{%- endif -%}

{%- assign use_related_products_metafield = false -%}
{%- if section.settings.related_products_metafield and product != blank and product.metafields.custom.related_products.value -%}
  {%- assign related_products_list = product.metafields.custom.related_products | split: ',' -%}
  {%- if related_products_list.size > 0 -%}
    {%- assign use_related_products_metafield = true -%}
  {%- endif -%}
{%- endif -%}

{% if section.settings.layout == 'carousel' %}<div class="product-slider">{% endif %}

<div class="wide-container half-gutter section-spacing section-id-{{ section.id }} {% if section.settings.alternate_bg_color %}use-alt-bg {% endif %}" data-section-type="featured-collection" data-components="product-block" data-cc-animate>
  {% if section.settings.title != blank or section.settings.show_view_all %}
    <div class="section-heading" data-cc-animate>
      {% if section.settings.title != blank %}
        <h2 class="h2">
          <a data-cc-animate-click href="{{ collections[section.settings.collection].url }}">
            {{ section.settings.title | escape }}
          </a>
        </h2>
      {% else %}
          <div></div>
      {% endif %}

      {% if section.settings.body_text != blank %}
        {{ section.settings.body_text }}
      {% endif %}

      {% if section.settings.show_view_all %}
        <a data-cc-animate-click class="view-all-link" href="{{ collections[section.settings.collection].url }}">
          {{ 'collections.general.view_all' | t }}
        </a>
      {% endif %}
    </div>
  {% endif %}

  {% if section.settings.layout == 'carousel' %}
    <div class="swiper-container product-list product-list--{{ section.settings.layout }}"
         data-products-in-view="{{ section.settings.grid }}">

      <div class="swiper-wrapper" data-normheights=".image" data-normheights-inner="img">
        {%- if use_related_products_metafield -%}
          {%- for related_product in product.metafields.custom.related_products.value -%}
            <div class="swiper-slide">
              {%- assign animate_delay = forloop.index | times: 0.4 -%}
              {% render 'product-block', product: related_product, product_class: product_class, i: forloop.index, animate: animate_delay, show_vendor: section.settings.show_vendor, hide_swatches: section.settings.hide_swatches %}
            </div>
          {%- endfor -%}
        {% elsif section.settings.collection != blank %}
          {% assign collection = collections[section.settings.collection] %}
          {% if section.settings.product_type_collection %}
            {% assign product_type = product.type | handleize %}
            {% assign collection = collections[product_type] %}
          {% endif %}
          {% for product in collection.products limit: 12 %}
            <div class="swiper-slide">
              {% assign animate_delay = forloop.index | times: 0.4 %}
              {% render 'product-block', product: product, product_class: product_class, i: forloop.index, animate: animate_delay, show_vendor: section.settings.show_vendor, hide_swatches: section.settings.hide_swatches %}
            </div>
          {% endfor %}
        {% else %}
          {% for i in (1..max_products) %}
            <div class="swiper-slide">
              {% assign animate_delay = forloop.index | times: 0.4 %}
              {% render 'onboarding-product-block', i: forloop.index, product_class: product_class, animate: animate_delay %}
            </div>
          {% endfor %}
        {% endif %}
      </div>

      <div class="swiper-scrollbar"></div>
      <div class="swiper-button-prev featured-collection-home"></div>
      <div class="swiper-button-next featured-collection-home"></div>
    </div>
  {% else %}
    <div class="product-list
      product-list--{{ section.settings.layout }}
      {% if section.settings.grid_mobile == '2' %}mob-two-col{% endif %}
      mob-show-{{ section.settings.rows | times: section.settings.grid_mobile }}
      {% if section.settings.layout == 'columns' %}jiggly-split dynamic-col-{{ section.settings.grid }}{% else %}grid--uniform{% endif %}">
      {%- if use_related_products_metafield -%}
        {% for related_product in product.metafields.custom.related_products.value limit: max_products %}
          {% render 'product-block', product: related_product, product_class: product_class, animation_type: animation_type, i: forloop.index, show_vendor: section.settings.show_vendor, animate: forloop.index, hide_swatches: section.settings.hide_swatches %}
        {% endfor %}
      {% elsif section.settings.collection != blank %}
        {% assign collection = collections[section.settings.collection] %}
        {% if section.settings.product_type_collection %}
          {% assign product_type = product.type | handleize %}
          {% if product.type == 'House Hoodie' %}
            {% assign product_type = 'House Hoodies' | handleize %}
          {% endif %}
          {% if product.type == 'JamTee' %}
            {% assign product_type = 'JamTees' | handleize %}
          {% endif %}
          {% assign has_product_switcher = false %}
          {% if product.type == 'Double Cozy Cloak' or product.type == 'Cozy Cloak' %}
            {% assign has_product_switcher = true %}
          {% endif %}
          {% assign collection = collections[product_type] %}
        {% endif %}
        {% for product in collection.products limit: max_products %}
          {% render 'product-block', product: product, product_class: product_class, animation_type: animation_type, i: forloop.index, show_vendor: section.settings.show_vendor, animate: forloop.index, hide_swatches: section.settings.hide_swatches %}
        {% endfor %}
      {% else %}
        {% for i in (1..max_products) %}
          {% assign animate_delay = forloop.index | times: 0.4 %}
          {% render 'onboarding-product-block', i: forloop.index, product_class: product_class, animate: animate_delay, animation_type: animation_type %}
        {% endfor %}
      {% endif %}
    </div>
  {% endif %}
</div>

{% if section.settings.layout == 'carousel' %}</div>{% endif %}


{% schema %}
  {
    "name": "Featured collection",
    "class": "section-featured-collection",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured collection"
      },
      {
        "type": "select",
        "id": "title_alignment",
        "label": "Heading Alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "right"
          }
        ],
        "default": "left"
      },
      {
        "type": "textarea",
        "id": "body_text",
        "label": "Body Text"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "checkbox",
        "id": "product_type_collection",
        "label": "Use product type as collection",
        "info": "Only works on the product template",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "related_products_metafield",
        "label": "Use related products metafield",
        "info": "Only works on the product template",
        "default": false
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "options": [
          {
            "value": "columns",
            "label": "Collage"
          },
          {
            "value": "rows",
            "label": "Grid"
          },
          {
            "value": "carousel",
            "label": "Carousel"
          }
        ],
        "default": "rows",
        "info": "Collage will only work when the 'Image shape' is set to Natural - in Products / Image shape"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show product vendor",
        "default": false
      },
      {
        "type": "range",
        "id": "grid",
        "label": "Desktop products per row",
        "min": 2,
        "max": 4,
        "default": 3
      },
      {
        "type": "range",
        "id": "rows",
        "label": "Rows",
        "min": 1,
        "max": 4,
        "default": 2,
        "info": "Does not apply to carousel layout"
      },
      {
        "type": "select",
        "id": "grid_mobile",
        "label": "Mobile products per row",
        "options": [
          {
            "value": "1",
            "label": "1"
          },
          {
            "value": "2",
            "label": "2"
          }
        ],
        "default": "2"
      },
      {
        "type": "number",
        "id": "max_products",
        "label": "Maximum product count"
      },
      {
        "type": "checkbox",
        "id": "hide_swatches",
        "label": "Hide color swatches",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "alternate_bg_color",
        "label": "Use alternate section color",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_view_all",
        "label": "Show 'View all' link",
        "default": true
      },
      {
        "type": "select",
        "id": "wave",
        "label": "Wave",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "top",
            "label": "Top"
          },
          {
            "value": "bottom",
            "label": "Bottom"
          },
          {
            "value": "both",
            "label": "Both"
          }
        ],
        "default": "none"
      },
      {
        "id": "color_bg",
        "type": "color",
        "label": "Background color",
        "default": "#ffffff"
      }
    ],
    "presets": [
      {
        "name": "Featured collection",
        "settings": {}
      }
    ],
    "templates": ["article", "index", "page", "product", "collection", "blog", "list-collections", "search", "404", "cart"]
  }
{% endschema %}
