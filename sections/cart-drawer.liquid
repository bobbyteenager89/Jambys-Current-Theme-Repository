      "id": "card_2_img",
      "label": "Card two image"
    },
    {
      "type": "text",
      "id": "card_2_title",
      "label": "Card two title",
      "info": "leave blank to hide card"
    },
    {
      "type": "url",
      "id": "card_2_link",
      "label": "Card two link"
    },
    {
      "type": "text",
      "id": "button_1_text",
      "label": "Button one text"
    },
    {
      "type": "text",
      "id": "button_1_subtext",
      "label": "Button one sub-text"
    },
    {
      "type": "url",
      "id": "button_1_url",
      "label": "Button one url"
    },
    {
      "type": "color",
      "id": "button_1_color",
      "label": "Button one color"
    },
    {
      "type": "color",
      "id": "button_1_bg",
      "label": "Button one bg"
    },
    {
      "type": "text",
      "id": "button_2_text",
      "label": "Button two text"
    },
    {
      "type": "text",
      "id": "button_2_subtext",
      "label": "Button two sub-text"
    },
    {
      "type": "url",
      "id": "button_2_url",
      "label": "Button two url"
    },
    {
      "type": "color",
      "id": "button_2_color",
      "label": "Button two color"
    },
    {
      "type": "color",
      "id": "button_2_bg",
      "label": "Button two bg"
    },
    {
      "type": "header",
      "content": "Free Shipping"
    },
    {
      "type": "checkbox",
      "id": "show_free_shipping_cta",
      "label": "Show free shipping CTA?"
    },
    {
      "type": "number",
      "id": "free_shipping_threshold",
      "label": "Free shipping amount threshold"
    },
    {
      "type": "richtext",
      "id": "free_shipping_upsell_text",
      "label": "Free shipping upsell text",
      "info": "This shows before the customer has reached the free shipping threshold"
    },
    {
      "type": "richtext",
      "id": "free_shipping_success_text",
      "label": "Free shipping success text",
      "info": "This shows when customer earns free shipping"
    }
  ]
}
{% endschema %}