                {%- if forloop.index >= product_video_index -%}
                  {%- assign thumb_index = forloop.index | plus: 1 -%}
                {%- endif -%}
              {%- endif -%}
              {%- if media_custom_info != blank -%}
                {%- assign matching_meta = media_custom_indexes[forloop.index0] -%}
                {%- assign media_info_label = blank -%}
                {%- if matching_meta != '-1' -%}
                  {%- assign matching_meta = matching_meta | plus: 0 -%}
                  {%- assign media_info_label = media_info_labels[matching_meta] -%}
                {%- endif -%}
              {%- endif -%}
              {% if forloop.first %}
                <li class="thumbnail {% if product.metafields.custom._show_last_image_as_first == true %}control-group-test{% endif %}" id="Slide-Thumbnails-{{ section.id }}-{{ thumb_index }}-{{ product.id }}"
                  data-target="{{ section.id }}-{{ media.id }}-last" data-media-position="{{ thumb_index }}" {%- if media.preview_image.alt contains 'type:'-%}data-image-alt="{{ media.preview_image.alt | split: 'type:' | last | strip }}"{%- endif -%}>
                  <button class="thumbnail__button" aria-label="Go to slide {{ thumb_index }}">
                    {% render 'media-product', media: media, animation_type: 'cc-fade-in', prevent_lazyload: false, class:'slide-thumbnail', view:'thumb', image_widths: '50,70,80,100,140,160', image_sizes: '(max-width: 767px) 50px, (max-width: 1199px) 70px, 80px', max_width: 160 %}
                    
                      {%- if media_info_label != blank -%}
                        <div class="product-media__guide-label">
                          {{- media_info_label -}}
                        </div>
                      {%- endif -%}
                  </button>
                  {% assign size = forloop.length | minus: 1 %}

                    <div class="spacer-list-element"></div>
                </li>
              {% endif %}
            {% endfor %} 
          {% endif %}

          {% for media in product.media %}
            {%- assign thumb_index = forloop.index -%}
            {%- if product_video != blank -%}
              {%- if forloop.index == product_video_index -%}
                <li class="thumbnail" id="Slide-Thumbnails-{{ section.id }}-{{ thumb_index }}-video"
                  data-target="{{ section.id }}-{{ product_video.id }}" data-media-position="{{ thumb_index }}">
                  <button class="thumbnail__button" aria-label="Go to slide {{ thumb_index }}">
                    {% render 'media-product', media: product_video, animation_type: 'cc-fade-in', prevent_lazyload: false, class:'slide-thumbnail', view:'thumb', image_widths: '50,70,80,100,140,160', image_sizes: '(max-width: 767px) 50px, (max-width: 1199px) 70px, 80px', max_width: 160 %}
                  </button>
                </li>
              {%- endif -%}
              {%- if forloop.index >= product_video_index -%}
                {%- assign thumb_index = forloop.index | plus: 1 -%}
              {%- endif -%}
            {%- endif -%}
            {%- if media_custom_info != blank -%}
              {%- assign matching_meta = media_custom_indexes[forloop.index0] -%}
              {%- assign media_info_label = blank -%}
              {%- if matching_meta != '-1' -%}
                {%- assign matching_meta = matching_meta | plus: 0 -%}
                {%- assign media_info_label = media_info_labels[matching_meta] -%}
              {%- endif -%}
            {%- endif -%}
