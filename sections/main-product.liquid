{%- assign breadcrumbs_block = section.blocks | where: 'type', 'breadcrumbs' | first -%}
{%- assign breadcrumbs = blank -%}
{%- if breadcrumbs_block != blank -%}
  {%- capture breadcrumbs -%}
    {%- assign root_url = breadcrumbs_block.settings.root_url -%}
    {%- assign root_label = breadcrumbs_block.settings.root_label -%}
    {%- assign breadcrumb_collection = breadcrumbs_block.settings.product_collection | default: product_type_collection -%}
    <nav class="product-breadcrumbs-wrapper" aria-label="Breadcrumbs" {{ breadcrumbs_block.shopify_attributes }}>
      <ol class="product-breadcrumbs">
        {%- if root_url != blank and root_label != blank -%}
          <li class="breadcrumb">
            <a class="breadcrumb__link" href="{{ root_url }}">{{ root_label }}</a>
          </li>
        {%- endif -%}
        {%- if collection != blank and collection.id != breadcrumb_collection.id and collection.url != root_url -%}
          <li class="breadcrumb">
            <a class="breadcrumb__link" href="{{ collection.url }}">{{ collection.title }}</a>
          </li>
        {%- endif -%}
        {%- if breadcrumb_collection != blank and breadcrumb_collection.url != root_url -%}
          <li class="breadcrumb">
            <a class="breadcrumb__link" href="{{ breadcrumb_collection.url }}">{{ breadcrumb_collection.title }}</a>
          </li>
        {%- endif -%}
        {%- if breadcrumbs_block.settings.include_product -%}
          <li class="breadcrumb">
              <a class="breadcrumb__link" href="{{ product.url }}" aria-current="page">{{ product.title }}</a>
          </li>
        {%- endif -%}
      </ol>
    </nav>
  {%- endcapture -%}
{%- endif -%}

<section class="product-area {% if product.media.size<=1 %} full-width {% endif %} 
                {% if product.media.size == 1 %}product-area--loner{% endif %}
                {% unless section.settings.full_width or is_featured_product %} product-area--restrict-width{% endunless %}
                {% if section.settings.media_style == 'one-column' %}product-area--one-col {% if section.settings.full_width %}header-overlap-section{% endif %} {% endif %}
                {% if section.settings.media_style == 'two-column' %}product-area--two-col {% endif %}"
         data-section-type="product-template"
         data-components="tabs,accordion"
         data-is-featured-product="{{ is_featured_product }}"
         data-ajax-add-to-cart="{% if section.settings.cart_type == "go_to_cart" %}false{% else %}true{% endif %}"
         data-is-preorder="{{ is_preorder_product }}"
         data-product-id="{{ product.id }}"
         data-enable-history-state="true">
  <div class="product-container" data-section-id="{{ section.id }}" data-product-url="{{ product_url }}">
    {{ breadcrumbs }}

    <div class="mobile-header">
      <span class="junip-product-summary" data-product-id="{{ product.id }}" data-product-rating-count="{{ product.metafields.junip.rating_count }}" data-product-rating-average="{{ product.metafields.junip.rating_average }}"> </span>
      <div class="new-mobile-price-header">
      <h1 class="product-area__details__title product-detail__gap-sm h2" {{ block.shopify_attributes }}>{{ product.type }}</h1>

      <div class="price-area product-detail__gap-sm"
        data-product-id="{{ product.id }}"
        data-variant-id="{{ current_variant.id }}"
        {{ block.shopify_attributes }}>
        {% if current_variant.compare_at_price > current_variant.price %}
          <span class="was-price theme-money">{%- render "price", price: current_variant.compare_at_price | money_without_trailing_zeros -%}</span>
        {% endif %}
          
        <div class="price theme-money">{%- render "price", price: current_variant.price | money_without_trailing_zeros -%}</div>
          
        {% render 'unit-price', variant: current_variant %}
      </div>
    </div>

    <h2 class="product-subtitle" {% if collections[product_type].metafields.custom.collection_subtitle == blank and product.metafields.global.subtitle == blank %}style="display:none;"{% endif %}>
      {% if collections[product_type].metafields.custom.collection_subtitle != blank %}
        {{ collections[product_type].metafields.custom.collection_subtitle }}
      {% else %}
        {{ product.metafields.global.subtitle }}
      {% endif  %}
    </h2>
      <span id="shop-pay-icon" style="display: none;">{% render "shop-pay-icon" %}</span>
            
    </div>
    <div class="flex-new">
      <div class="left_Section desktop-version">
        <media-gallery data-desktop-layout="thumbnail_slider" id="MediaGallery-{{ section.id }}">
          <slider-component id="GalleryViewer-{{ section.id }}" class="product-gallery-viewer">
            <div id="GalleryViewerButtons-{{ section.id }}" class="product-gallery-viewer__nav">
              <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="Slide left">
                {%- render 'svg-chevron-left' -%}
              </button>
              <button type="button" class="slider-button slider-button--next" name="next" aria-label="Slide right">
                {%- render 'svg-chevron-right' -%}
              </button>
            </div>
        <ul class="media-grid" id="Slider-Gallery">
          {%- assign media_custom_info = product.metafields.media.custom_info.value -%}
          {%- if media_custom_info != blank -%}
            {%- assign media_info_index = media_custom_info | map: 'media_index' -%}
            {%- assign media_info_models = media_custom_info | map: 'model_description' -%}
            {%- assign media_info_labels = media_custom_info | map: 'guide_label' -%}
            {%- assign has_guide_labels = false -%}
            {%- capture media_indexes -%}
              {%- for index in (1..product.media.size) -%}
                {%- assign index_match = -1 -%}
                {%- for media_index in media_info_index -%}
                  {%- if media_index == forloop.parentloop.index -%}
                    {%- assign index_match = forloop.index0 -%}
                    {%- if media_info_labels[forloop.index0] != blank -%}
                      {%- assign has_guide_labels = true -%}
                    {%- endif -%}
                    {%- break -%} 
                  {%- endif -%}
                {%- endfor -%}
                {{ index_match }}{%- unless forloop.last -%},{%- endunless -%}
              {%- endfor -%}
            {%- endcapture -%}
            {%- assign media_custom_indexes = media_indexes | split: ',' -%}
          {%- endif -%}

          
          {% assign last = product.media | reverse %}
          {% if product.metafields.custom._show_last_image_as_first == true %}
            {% for media in last %}
              {% if forloop.first %}
                <li 
                  id="Slide-{{ section.id }}-{{ media.id }}-{{product.id}}"
                  data-media-id="{{ section.id }}-{{ media.id }}-last"
                  {%- if media.preview_image.alt contains 'type:'-%}data-image-alt="{{ media.preview_image.alt | split: 'type:' | last | strip }}"{%- endif -%}
                  class="
                    width-new-gallry
                    {% if media.media_type == 'image' and section.settings.enable_zoom == true %} popupme{% endif %}
                    {% if media.media_type == 'video' %} video{% else %} {{ media.preview_image.alt | escape }}{% endif %}
                    {% if media.alt != product.title %} md-h-auto{% endif %}
                    {% unless media.alt contains 'wear' and media.alt contains ' | ' %} no-model-sizes{% endunless %}
                     {% if product.metafields.custom._show_last_image_as_first == true %}
                     control-group-test
                     {% endif %}
                  " 
                  {% if media.media_type == 'image' and section.settings.enable_zoom == true %}{% assign zoom_width = media.preview_image.width | at_most: 2048 %}
                  data-img_src="{{ media.preview_image | image_url: width: zoom_width }}"{% endif %}
                >
                  <div class="media-wrapper">
                    {%- if media_custom_info != blank -%}
                      {%- assign media_model_description = blank -%}
                      {%- assign matching_meta = media_custom_indexes[forloop.index0] -%}
                      {%- if matching_meta != '-1' -%}
                        {%- assign matching_meta = matching_meta | plus: 0 -%}
                        {%- assign media_model_description = media_info_models[matching_meta] -%}
                      {%- endif -%}
                    {%- endif -%}
  
                    <div id="slide-{{ forloop.index }}" class="anchor-offest"></div>
  
                    {% render 'media-product', media: media, animation_type: 'cc-fade-in', prevent_lazyload: forloop.first, class:'', view:'main' %}
  
                    {%- if media_model_description != blank -%}
                      <div class="product-media__model-description">
                        {{- media_model_description -}}
                      </div>
                    {%- endif -%}
  
                    {% if settings.prod_label_layout contains 'marquee' and forloop.first %}
                      <div class="feature-banner-custom">
                        <div class="product-marquee  marquee marquee--hover">
                          {% render 'product-label', product: product, cheapest_variant: cheapest_variant %}
                        </div>
                      </div>
                    {% endif %}
  
                    {% if media.alt contains "wear" and media.alt contains "modelsizing" %}
                      <div class="product-media__model-sizes">
                        {% assign models_sizing = media.alt | split: ' | '  %}
                        {% assign counter = 0 %}
                        {% for sizing in models_sizing %}
                          {% if sizing contains "first" %}
                            {% assign counter = counter | plus: 1 %}
                          {% endif %}
                        {% endfor %}
                        {% assign sizes_length = models_sizing.size | minus:counter %}
                        {% for sizing in models_sizing %}
                          {% if sizes_length <= 1 %}
                            {% unless sizing contains "first:" %}
                              <p class="only-sizing-item">{{ sizing | split: ':' | last}}</p>
                            {% endunless %}
                          {% else %}
                            {% unless sizing contains "first:" %}
                              {% if sizing contains 'type' %}
                              {% else %}
                                <p class="many-sizing-items">{{ sizing | split: ':' | last}}</p>
                            {% endif %}
                            {% endunless %}
                          {% endif %}
                        {% endfor %}
                      </div>
                    {% endif %}
                  </div>
                </li>
              {% endif %}
            {% endfor %} 
          {% endif %}
          
          


          {% for media in product.media %}
            {%- if product_video != blank and forloop.index == product_video_index -%}
              <li id="Slide-{{ section.id }}-{{ product_video.id }}" data-media-id="{{ section.id }}-{{ product_video.id }}"
                class="width-new-gallry video">
                <div class="media-wrapper">
                  {% render 'media-product', media: product_video, animation_type: 'cc-fade-in', prevent_lazyload: false, class:'', view:'main' %}
                </div>
              </li>
            {%- endif -%}

            <li 
              id="Slide-{{ section.id }}-{{ media.id }}-{{product.id}}"
              data-media-id="{{ section.id }}-{{ media.id }}"
              {%- if media.preview_image.alt contains 'type:'-%}data-image-alt="{{ media.preview_image.alt | split: 'type:' | last | strip }}"{%- endif -%}
              class="
                width-new-gallry
                {% if media.media_type == 'image' and section.settings.enable_zoom == true %} popupme{% endif %}
                {% if media.media_type == 'video' %} video{% else %} {{ media.preview_image.alt | escape }}{% endif %}
                {% if media.alt != product.title %} md-h-auto{% endif %}
                {% unless media.alt contains 'wear' and media.alt contains ' | ' %} no-model-sizes{% endunless %}
                 {% if forloop.first and product.metafields.custom._show_last_image_as_first == true %} control-group-test-hide {% endif %} {% if forloop.last and product.metafields.custom._show_last_image_as_first == true%} control-group-test-hide {% endif %}
              " 
              {% if media.media_type == 'image' and section.settings.enable_zoom == true %}{% assign zoom_width = media.preview_image.width | at_most: 2048 %}
              data-img_src="{{ media.preview_image | image_url: width: zoom_width }}"{% endif %}
            >
              <div class="media-wrapper">
                {%- if media_custom_info != blank -%}
                  {%- assign media_model_description = blank -%}
                  {%- assign matching_meta = media_custom_indexes[forloop.index0] -%}
                  {%- if matching_meta != '-1' -%}
                    {%- assign matching_meta = matching_meta | plus: 0 -%}
                    {%- assign media_model_description = media_info_models[matching_meta] -%}
                  {%- endif -%}
                {%- endif -%}

                <div id="slide-{{ forloop.index }}" class="anchor-offest"></div>

                {% render 'media-product', media: media, animation_type: 'cc-fade-in', prevent_lazyload: forloop.first, class:'', view:'main' %}

                {%- if media_model_description != blank -%}
                  <div class="product-media__model-description">
                    {{- media_model_description -}}
                  </div>
                {%- endif -%}

                {% if settings.prod_label_layout contains 'marquee' and forloop.first %}
                  <div class="feature-banner-custom">
                    <div class="product-marquee  marquee marquee--hover">
                      {% render 'product-label', product: product, cheapest_variant: cheapest_variant %}
                    </div>
                  </div>
                {% endif %}

                {% if media.alt contains "wear" and media.alt contains "modelsizing" %}
                  <div class="product-media__model-sizes">
                    {% assign models_sizing = media.alt | split: ' | '  %}
                    {% assign counter = 0 %}
                    {% for sizing in models_sizing %}
                      {% if sizing contains "first" %}
                        {% assign counter = counter | plus: 1 %}
                      {% endif %}
                    {% endfor %}
                    {% assign sizes_length = models_sizing.size | minus:counter %}
                    {% for sizing in models_sizing %}
                      {% if sizes_length <= 1 %}
                        {% unless sizing contains "first:" %}
                          <p class="only-sizing-item">{{ sizing | split: ':' | last}}</p>
                        {% endunless %}
                      {% else %}
                        {% unless sizing contains "first:" %}
                          {% if sizing contains 'type' %}
                            {% else %}
                              <p class="many-sizing-items">{{ sizing | split: ':' | last}}</p>
                          {% endif %}
                        {% endunless %}
                      {% endif %}
                    {% endfor %}
                  </div>
                {% endif %}
              </div>
            </li>
          {% endfor %} 
        </ul>
      </slider-component>
      <div class="thumbnail-gallery-container" id="GalleryThumbnails-{{ section.id }}">
        <ul class="thumbnail-gallry{% if has_guide_labels %} thumbnail-gallery--has-guide-labels{% endif %}" id="Slider-Thumbnails">
          


          {% assign reverse = product.media | reverse %}
          {% if product.metafields.custom._show_last_image_as_first == true %}
            {% for media in reverse %}
              {%- assign thumb_index = forloop.index -%}
              {%- if product_video != blank -%}
                {%- if forloop.index == product_video_index -%}
                  <li class="thumbnail" id="Slide-Thumbnails-{{ section.id }}-{{ thumb_index }}-video"
                    data-target="{{ section.id }}-{{ product_video.id }}" data-media-position="{{ thumb_index }}">
                    <button class="thumbnail__button" aria-label="Go to slide {{ thumb_index }}">
                      {% render 'media-product', media: product_video, animation_type: 'cc-fade-in', prevent_lazyload: false, class:'slide-thumbnail', view:'thumb', image_widths: '50,70,80,100,140,160', image_sizes: '(max-width: 767px) 50px, (max-width: 1199px) 70px, 80px', max_width: 160 %}
