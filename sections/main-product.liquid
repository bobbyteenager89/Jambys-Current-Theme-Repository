              data-target="{{ section.id }}-{{ media.id }}" data-media-position="{{ thumb_index }}" {%- if media.preview_image.alt contains 'type:'-%}data-image-alt="{{ media.preview_image.alt | split: 'type:' | last | strip }}"{%- endif -%}>
              <button class="thumbnail__button" aria-label="Go to slide {{ thumb_index }}">
                {% render 'media-product', media: media, animation_type: 'cc-fade-in', prevent_lazyload: false, class:'slide-thumbnail', view:'thumb', image_widths: '50,70,80,100,140,160', image_sizes: '(max-width: 767px) 50px, (max-width: 1199px) 70px, 80px', max_width: 160 %}
                
                  {%- if media_info_label != blank -%}
                    <div class="product-media__guide-label">
                      {{- media_info_label -}}
                    </div>
                  {%- endif -%}
              </button>
              {% assign size = forloop.length | minus: 1 %}

                <div class="spacer-list-element"></div>
            </li>
          {% endfor %} 
        </ul>
      </div>
    </media-gallery>
