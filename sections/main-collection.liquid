          {
            "type": "color",
            "id": "filter_swatch_color",
            "label": "Color used for swatch"
          },
          {
            "type": "image_picker",
            "id": "filter_swatch_image",
            "label": "Image used for swatch"
          }
        ]
      },
      {
        "type": "quick_link",
        "name": "Quick Link",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Link Title"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ]
  }
